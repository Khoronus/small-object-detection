{
    "name": "VOC_SSD",
    "n_gpu": 1,

    "arch": {
        "type": "SSD300",
        "args": {"n_classes": 20}
    },
    "data_loader": {
        "type": "VOCDataLoader",
        "args":{
            "data_dir": "./data",
            "image_size": 300,
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 1,
            "augment": false
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001,
            "momentum": 0.9,
            "weight_decay": 0.00001,
            "amsgrad": true
        }
    },
    "loss": "MultiBoxLoss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 80,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboardX": true
    }
}
